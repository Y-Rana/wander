<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/groupCard"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="16dp"
                    android:text="Name"
                    android:textFontWeight="1000"
                    android:textSize="30sp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/group_card_content"
                android:layout_width="210dp"
                android:layout_height="133dp"
                android:layout_marginStart="37dp"
                android:layout_marginBottom="19dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/group_card_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@drawable/baseline_miscellaneous_services_24" />

                <TextView
                    android:id="@+id/info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="expanded" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="35dp"
                    android:backgroundTint="@color/wander_dark_grey"
                    android:textSize="18sp"
                    app:cornerRadius="20dp"
                    android:text="Join" />

                <Button
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="right"
                    android:backgroundTint="@color/wander_dark_grey"
                    android:textSize="18sp"
                    app:cornerRadius="20dp"
                    android:text="Info" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</android.widget.RelativeLayout>